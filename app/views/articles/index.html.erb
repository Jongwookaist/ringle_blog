<h1 class="text-4xl mb-10">Articles</h1>

<div class="border-t-2 border-black">
  <div class="flex justify-evenly">
    <div class="w-1/2 justify-center flex py-2">제목</div>
    <div class="flex w-1/2 py-1 items-center">
      <div class="w-1/3 text-center">작성자</div>
      <div class="w-1/3 text-center">작성일</div>
      <div class="w-1/3 text-center">조회</div>
    </div>
  </div>

  <div>
    <% @articles.each do |article| %>
      <div class="flex justify-evenly border-t-2 border-gray-50 py-2">
        <div class="w-1/2 flex">
          <div class="mr-4">
            <%= article.id %>
          </div>
          <div class="">
            <%= link_to article.title, article %>
          </div>
        </div>

        <div class="flex w-1/2 py-1 items-center">
          <div class="w-1/3 text-center">
            <%= article.writer%>
          </div>
          <div class="w-1/3 text-center">
            <%= article.updated_at.strftime('%Y.%m.%d') %>
          </div>
          <div class="w-1/3 text-center">
            <%= article.views %>
          </div>
        </div>
      </div>
      <% end %>
  </div>
</div>

<%= link_to "New Article" , new_article_path %>